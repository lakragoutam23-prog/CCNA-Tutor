# Database (Neon Postgres)
DATABASE_URL=postgresql://user:pass@host/dbname?sslmode=require

# Neon Auth
NEON_AUTH_BASE_URL=https://your-project.neonauth.c-3.us-east-1.aws.neon.tech/neondb/auth
NEXT_PUBLIC_NEON_AUTH_URL=https://your-project.neonauth.c-3.us-east-1.aws.neon.tech/neondb/auth

# Authentication
JWT_SECRET=your-256-bit-secret-key-here-min-32-chars
BETTER_AUTH_SECRET=your-256-bit-secret-key-here-min-32-chars
BETTER_AUTH_URL=http://localhost:3000

# LLM (Groq) - Get key from https://console.groq.com
GROQ_API_KEY=gsk_xxxxx

# Caching (Vercel KV) - optional
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
ADMIN_EMAILS=admin@example.com

# Feature Flags (optional)
FEATURE_LABS=true
FEATURE_GROUPS=true
FEATURE_EXAMS=true
